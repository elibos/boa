{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [ "es6" ],
    "target": "es6",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "types": [ "node" ],
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "files": [
    "./index.d.ts",
  ],
  "exclude": [
    "node_modules",
    "test",
    "dist"
  ]
}
